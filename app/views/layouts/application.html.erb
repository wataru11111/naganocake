<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


 <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "LOGO", root_path, class: 'nav-link text-light' %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if customer_signed_in? %>

           <li class="nav-item">
              <%= link_to customer_path(current_user.id),  class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i>マイページ
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to users_path, class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i>商品一覧
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to books_path, class: 'nav-link text-light' do %>
              <i class="fas fa-book-open"></i>カート
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>

            <% else %>


            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i>About
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to root_path,  class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i>商品一覧
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to  new_customer_registration_path, class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i>新規登録
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to new_customer_session_path, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
            </li>

            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>

     <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
