<div class="container">


<p><%= image_tag @item.get_image(100, 100) %></p>

<h2><%= @item.name %></h2>
<p><%= @item.introduction %></p>
<p><%= @item.price %></p>


<%= form_with model: @cart_item,url:cart_items_path do |f| %>
    <%= f.select :amount, [*1..10], include_blank: "個数選択" %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.submit 'カートに入れる' %>
    <% end %>
</div>