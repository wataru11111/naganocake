<div class="container">
 <div class="row">
 <h1 class="col-md-6">商品一覧</h1>
 <%= link_to '新規登録', new_admin_item_path, class: "btn btn-sm btn-danger col-md-3 offset-md-3" %>

<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
 </thead>

<tbody>
<% @items.each do |item| %>
<tr>
<td>
<%= item.id %>
</td>
<td>
<%= link_to admin_item_path(item.id) do %>
<%= item.name %>
<% end %>
</td>
<td>
<%= item.price %>
<% end %>
</td>
</tr>
</tbody>
</table>
<%= paginate @items %>
</div>