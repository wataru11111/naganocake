<div class="container">

<h1>会員一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
 </thead>

<tbody>
<% @customers.each do |customers| %>
<tr>
<td>
<%= customers.id %>
</td>
<td>
<%= link_to admin_customer_path(customers.id) do %>
<%= customers.last_name %> <%= customers.first_name%>
<% end %>
</td>
<td>
<%= customers.email %>
</td>
<td>
<%if customers.is_deleted %>
<h4>退会</h4>
<% else %>
<h4>有効</h4>
<% end %>
</td>
<% end %>
</tr>
</tbody>
</table>
<%= paginate @customers %>
</div>