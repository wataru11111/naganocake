<div class="container">

<h1>注文履歴一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
 </thead>

<tbody>
<% @orders.each do |orders| %>
<tr>
<td>
<%= link_to admin_order_path(orders.id) do %>
<%= orders.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %>
<% end %>
</td>
<td>
<%= orders.name %>
</td>
<td>
<%= orders.order_products.sum(:quantity) %>
<% end %>
</td>
</tr>
</tbody>
</table>
<%= paginate @orders %>
</div>
