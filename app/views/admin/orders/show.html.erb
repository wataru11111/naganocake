<div class="container">
 <h2>注文履歴詳細</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入者</th>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <td>
      <%= @customer.last_name %> <%= @customer.first_name %>
   </td>
    <td>
      <%= @order.created_at %>
   </td>
    <td>
      <%= @order.address %>
    </td>
    <td>
     <%= @order.method_of_payment_i18n %>
    </td>

  </tr>
  　</tbody>
</table>


<table class="table">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>


  <tbody>
    <% @order_products.each do |order_product| %>
    <tr>
    <td>
      <%= order_product.item.name %>
   </td>
    <td>
      <%= order_product.purchase_price %>
    </td>
    <td>
       <%= order_product.quantity %>
  　</td>
  <td>
  <%= order_product.purchase_price * order_product.quantity  %>
  </td>
  </tr>
  <% end %>
  　</tbody>
</table>


<table class="table">
  <thead>
    <tr>
      <th>商品合計</th>
      <th>送料</th>
      <th>請求金額合計</th>
    </tr>
  </thead>

  <tbody>

  <td>
   <%= @order_products.sum(&:subtotal) %>
  </td>


  <td>
  <%= 800 %>
  </td>

  <td>
  <%= @order.payment %>
  </td>
  </tr>
  　</tbody>
</table>
