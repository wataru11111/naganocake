<div class="container">
 <h2>注文情報入力</h2>

<%= form_with model: @order,url:orders_confirmation_path do |f| %>
<h2>支払方法</h2>
　<div class="field">
  <%= f.radio_button :method_of_payment, Order.method_of_payments.key(0) %>
  <%= f.label :クレジット %><br />
  </div>
      <div class="field">
  <%= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %>
  <%= f.label :銀行振込 %><br />
   </div>

<h2>お届け先</h2>
<%= f.radio_button :shipping_option, :"0" %><p>ご自身の住所</p>
<%= current_customer.postal_code %>
 <%= current_customer.address %>
 <%= current_customer.last_name %> <%= current_customer.first_name %><br />

<%= f.radio_button :shipping_option, :"1" %><P>新しいお届け先</P>
　　<div class="field">
      <%= f.label :郵便番号（ハイフンなし） %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

     <div class="field">
      <%= f.label :宛名 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <%= f.submit '確認画面へ進む' %>

  <% end %>
  </div>